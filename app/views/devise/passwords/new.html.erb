<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= f.error_notification %>
  <div class="base-container image">

    <div class="side-container d-flex justify-content-center align-items-center">
      <div class="row">
        <div class="form">
          <div class="form-sign-up">
            <%= image_tag "https://res.cloudinary.com/siggimsiggi/image/upload/v1574240303/hopla-logo_nbk4aq.png", class: "logo"%>
            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
            </div>
            <div class="form-actions text-center">
              <%= f.button :submit, "Reset password", class: "btn-v1"%>
            </div>
            <%= render "devise/shared/links",class: "log-in-links pt-3" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

