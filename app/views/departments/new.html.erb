

<div class="form-page container">
<%= simple_form_for (@department) do |f| %>
  <div class="form-block">
    <div class="block-header">
      <h2>Create a new department</h2>
    </div>
    <div class="inside-block">
      <span class="labeltext" ><%= f.input :name %></span>
      <span class="labeltext" ><%= f.input :color, as: :color %>
      <%= f.submit "add department", class: "btn btn-v1" %>
    <% end %>
    </div>
  </div>
</div>

