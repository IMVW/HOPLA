


<div class= "card-container">
  <div class="upper-container">
    <div class="image-container">
     <img src=  <%=@user.photo %> alt="">
   </div>
 </div>
 <div class="lower-container">
  <div>
    <h4></h4>
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>

    <% if @user.skills != nil %>
    <td><% @user.skills.each do |skill| %>
    <h4><i class="fas fa-toolbox"></i><%= skill %></h4>
    <% end %>
    <% else %>
    <h4></h4>
    <% end %></td>

    <h3></h3>
    <h4><i class="fas fa-phone  "></i><%= @user.phone_number %></h4>
    <h4><i class="fas fa-envelope  "></i><%= @user.email %></h4>
    <h4><i class="fas fa-birthday-cake  "></i><%= @user.birthday %></h4>
    <h4></h4>
    <h4></h4>
  </div>
  <div><a href="#" class="btn btn-primary">edit</a></div>
</div>
</div>













